/* pages/previewDetail/previewDetail.wxss */
.spot-page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.banner-cont{
  width: 100%;
  height: 340rpx;
  position: relative;
}
.spotImg{
  display: block;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5)
}
.spotTitle{
  position: absolute;
  left: 0;
  top:26rpx;
  width: 100%;
  text-align: center;
  font-size:34rpx;
  color:#fff;
}
.spot-foot{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 12rpx 0;
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #eee;
  background: #fff;
}
.foot-item{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 12rpx 0;
  line-height: 44rpx;
}
.foot-item:first-child{
  border-right: 1px solid #eee;
}
.foot-icon{
  width: 48rpx;
  height: 48rpx;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  margin: 0 28rpx 0 0;

}
.foot-icon.like-icon{
  background: url('data:image/png;base64,') no-repeat;
  background-size: 100% 100%;
}
.like-icon-active{
  background: url('data:image/png;base64,') no-repeat;
  background-size: 100% 100%;
}
.addr-infos{
  padding: 0 18rpx;
  margin: 40rpx 0 30rpx 0;
}
.voiceBtn{
  width:90rpx;
	height:90rpx;
	position:absolute;
	left:50%;
	top:50%;
	margin-top:-45rpx;
	margin-left:-45rpx;
}
.spot-title-cont{
  padding: 56rpx 0;
  text-align: center;
}
.spot-name{
  font-size: 36rpx;
  color: #000;
}
.spot-enname{
  padding: 26rpx 0;
  color: #999;
}
.spot-simple-intro{
  padding: 0 22%;
  color: #999;
  display: flex;
  justify-content: space-between;
}
.spot-intros{
  padding: 0 18rpx;
}
.spot-simple-intro view{
  width: 30%;
  word-wrap:break-word;
}
.spot-simple-intro view:first-child, .spot-simple-intro view:last-child{
  width: 34%;
}